<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:text="운동기록 수정"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogWeightInfoTypeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="type" />
    <EditText
        android:id="@+id/dialogWeightInfoTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="type"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/dialogWeightInfoCountTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="count" />
    <EditText
        android:id="@+id/dialogWeightInfoCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="count"
        android:inputType="number" />

    <TextView
        android:id="@+id/dialogWeightInfoSetTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set" />
    <EditText
        android:id="@+id/dialogWeightInfoSetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="set"
        android:inputType="number" />

    <TextView
        android:id="@+id/dialogWeightInfoRestTimeTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rest time" />
    <EditText
        android:id="@+id/dialogWeightInfoRestTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="rest time"
        android:inputType="number" />
</LinearLayout>